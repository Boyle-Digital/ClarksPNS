{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] },

    // ⬇️ Force TS to use ONLY this package's @types
    "typeRoots": ["./node_modules/@types"],
    // ⬇️ Explicit ambient types (add vite/client here)
    "types": ["vite/client", "react", "react-dom", "node"],

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "vite.config.ts", "vite.config.js"]
}
